<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_color"
        tools:context=".AuthUsersInfoActivity">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/camera"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:id="@+id/signin_info_profile_imageview" android:onClick="handlerInsertData"/>
    <TextView
            android:text="Fotoğraf seç"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kodchasanbold"
            android:id="@+id/signin_profile_desc_textView"
            android:textAlignment="center"/>
    <EditText android:layout_width="200dp"
              android:layout_height="50dp"
              android:textSize="20dp"
              android:fontFamily="@font/ralewaybold"

              android:singleLine="true"
              android:inputType="textPersonName"
              android:minLines="4"
              android:layout_marginTop="50dp"
              android:hint="@string/user_name"
              android:layout_gravity="center"
              android:id="@+id/signin_info_username_editText" android:gravity="center"
              android:background="@drawable/home_jokers_background_design_middle"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:fontFamily="@font/ralewaybold"

            android:ems="10"
            android:maxLength="2"
            android:id="@+id/signin_info_age_editText"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:hint="@string/Age" android:gravity="center"
            android:background="@drawable/home_jokers_background_design_middle"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/signin_info_reference_editText"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ralewaybold"
            android:hint="Referans Adı (İsteğe Bağlı)" android:gravity="center"
            android:background="@drawable/home_jokers_background_design_middle" android:paddingRight="10dp"/>
    <Button android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/continuee"
            android:fontFamily="@font/ralewayblack"
            android:background="@drawable/guess_it_and_game_button_oval"
            android:layout_gravity="center" android:layout_marginTop="16dp"
            android:id="@+id/signin_info_continue_button"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center" android:gravity="center"
            android:layout_marginTop="16dp">
        <com.airbnb.lottie.LottieAnimationView
                android:layout_height="24dp"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                app:lottie_fileName="minilogoload.json"
                app:lottie_repeatMode="reverse"
                android:layout_gravity="center"
                android:visibility="gone"
                android:id="@+id/auth_info_screen_sign_lottie2" android:layout_width="24dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kayıt Oluşturuluyor.."
                android:textSize="12sp"
                android:textColor="@color/textcolorblack"
                android:layout_gravity="center"
                android:id="@+id/auth_info_screen_sign_text3"
                android:visibility="gone"
                android:layout_marginLeft="4dp"/>
    </LinearLayout>


</LinearLayout>