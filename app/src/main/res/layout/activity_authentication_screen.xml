<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/splashScreenLayout"
        android:orientation="vertical"
        android:background="@drawable/gradient_color"
        tools:context=".SplashScreenActivity">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/selfiewarsLogo"
            android:background="@drawable/sellfiewarslogo"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.333"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/selfiewarsText"
              android:layout_gravity="center"
              android:textStyle="bold"
              android:textSize="30dp"
              android:text="SelfieWars"
              android:textColor="@color/textcolorblack"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/selfiewarsLogo"
              app:layout_constraintStart_toStartOf="@+id/selfiewarsLogo" android:layout_marginStart="8dp"
              app:layout_constraintEnd_toEndOf="@+id/selfiewarsLogo" android:layout_marginEnd="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giris Yapılıyor.."
            android:textSize="20dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="114dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/selfiewarsText" android:id="@+id/textView"
            android:visibility="gone"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/loadingicon"
               android:layout_gravity="center"
               tools:layout_editor_absoluteX="164dp" android:layout_marginTop="8dp"
               app:layout_constraintTop_toBottomOf="@+id/textView" android:visibility="gone"/>

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/mailicon"
            android:layout_weight="1" android:id="@+id/googlesign_imageview"
            app:layout_constraintStart_toStartOf="@+id/selfiewarsLogo"
            app:layout_constraintEnd_toEndOf="@+id/selfiewarsLogo" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/selfiewarsText"/>


</android.support.constraint.ConstraintLayout>