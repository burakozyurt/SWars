<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#5224"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GuessItActivity">

    <TextView
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            tools:layout_editor_absoluteX="44dp"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView9" android:text="Time"
            app:layout_constraintEnd_toStartOf="@+id/textView9"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            app:layout_constraintTop_toTopOf="@+id/textView8" android:text=":"
            app:layout_constraintEnd_toStartOf="@+id/textView8"/>
    <TextView
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/markzuckerberg" android:id="@+id/imageView5"
            tools:layout_editor_absoluteX="70dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="20"
            android:background="@drawable/circlebutton"
            android:layout_width="48dp"
            android:layout_height="43dp" android:id="@+id/button2"
            app:layout_constraintStart_toStartOf="@+id/button7"
            app:layout_constraintTop_toTopOf="@+id/button5"/>
    <Button
            android:text="20"
            android:background="@drawable/circlebutton"
            android:layout_width="48dp"
            android:layout_height="43dp" android:id="@+id/button7"
            app:layout_constraintStart_toEndOf="@+id/button6"
            android:layout_marginStart="64dp" app:layout_constraintTop_toTopOf="@+id/button6"
    />
    <Button
            android:text="20"
            android:background="@drawable/circlebutton"
            android:layout_width="48dp"
            android:layout_height="43dp" android:id="@+id/button5"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button6" app:layout_constraintEnd_toEndOf="@+id/button6"
    />
    <Button
            android:text="20"
            android:background="@drawable/circlebutton"
            android:layout_width="48dp"
            android:layout_height="43dp" android:id="@+id/button6"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="@+id/imageView5" app:layout_constraintEnd_toEndOf="@+id/imageView5"
            android:layout_marginEnd="128dp"/>
</android.support.constraint.ConstraintLayout>