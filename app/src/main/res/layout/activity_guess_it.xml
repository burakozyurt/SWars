<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/guessit_activity_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GuessItActivity">

    <TextView
            android:text=":"
            android:textSize="25dp"
            android:textColor="@color/background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/textView7"/>
    <TextView
            android:text="0"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/textView3"
    />
    <TextView
            android:text="Score"
            android:textColor="@color/background"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/background"
            android:textSize="25dp"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView9" android:text="Time"
            app:layout_constraintEnd_toStartOf="@+id/textView9"
    />
    <TextView
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/background"
            android:textStyle="bold"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            app:layout_constraintTop_toTopOf="@+id/textView8" android:text=":"
            app:layout_constraintEnd_toStartOf="@+id/textView8"/>
    <TextView
            android:text="8"
            android:textSize="25dp"
            android:textColor="@color/background"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/markzuckerberg" android:id="@+id/imageView5"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <Button
            android:text="20"
            android:textColor="@color/textcolor"
            android:background="@drawable/circlebutton"
            android:layout_width="80dp"
            android:layout_height="75dp" android:id="@+id/button2"
            app:layout_constraintStart_toStartOf="@+id/button7"
            app:layout_constraintTop_toTopOf="@+id/button5"/>
    <Button
            android:text="20"
            android:textColor="@color/textcolor"
            android:background="@drawable/circlebutton"
            android:layout_width="80dp"
            android:layout_height="75dp" android:id="@+id/button7"
            app:layout_constraintStart_toEndOf="@+id/button6"
            android:layout_marginStart="64dp" app:layout_constraintTop_toTopOf="@+id/button6"
    />
    <Button
            android:text="20"
            android:textColor="@color/textcolor"
            android:background="@drawable/circlebutton"
            android:layout_width="80dp"
            android:layout_height="75dp" android:id="@+id/button5"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/button6" app:layout_constraintEnd_toEndOf="@+id/button6"
    />
    <Button
            android:text="20"
            android:textColor="@color/textcolor"
            android:background="@drawable/circlebutton"
            android:layout_width="80dp"
            android:layout_height="75dp" android:id="@+id/button6"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
    />
</android.support.constraint.ConstraintLayout>