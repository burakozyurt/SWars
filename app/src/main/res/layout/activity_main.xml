<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:itemIconTint="@color/nav_item_colors"
            android:background="#ffffff"
            android:backgroundTint="@color/background"
            app:itemTextColor="@color/diamond_background"
            android:id="@+id/bottom_nav_bar"
            app:menu="@menu/nav_items" tools:layout_editor_absoluteY="512dp" tools:layout_editor_absoluteX="16dp"
            android:layout_alignParentStart="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp">
    </android.support.design.widget.BottomNavigationView>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="506dp" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp" android:layout_alignParentTop="true" android:layout_marginTop="0dp"
            android:layout_above="@+id/bottom_nav_bar" android:layout_marginBottom="1dp" android:id="@+id/main_frame">

    </FrameLayout>
</RelativeLayout>