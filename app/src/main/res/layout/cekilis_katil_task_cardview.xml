<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"
                                    android:layout_marginTop="10dp" android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginBottom="5dp" app:cardBackgroundColor="@color/transparent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="10dp"
    >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="250dp"
                android:layout_height="wrap_content" android:layout_weight="1" android:padding="5dp">
            <TextView
                    android:text="Her reklam izlediğinizde bir katılım hakkı kazanırsınız. "
                    android:textSize="16sp"
                    android:textColor="@color/textcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cekilis_katil_task_desc_TextView"
                    android:layout_weight="1"/>
            <TextView
                    android:text="(1 günde en fazla 5 reklam gönderilmektedir)"
                    android:textColor="@color/textcolor"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cekilis_katil_task_brackets_TextView"
                    android:layout_weight="1"/>
        </LinearLayout>
        <Button
                android:text="İzle Katıl"
                android:textColor="@color/textcolorblack"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/cekilis_katil_task_button"
                android:layout_weight="1"
                android:background="@drawable/edittextoval" android:gravity="center" android:layout_gravity="center"/>
    </LinearLayout>
</android.support.v7.widget.CardView>