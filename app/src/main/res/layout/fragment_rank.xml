<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:scrollbars="vertical"
             tools:context=".RankFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

            <TextView
                    android:textSize="24sp"
                    android:textColor="@color/textcolor"
                    android:text="@string/ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:id="@+id/textView13"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" android:src="@drawable/line"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" android:id="@+id/imageView2"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout2"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
                    android:layout_marginEnd="0dp" android:layout_marginStart="0dp">
                <android.support.constraint.ConstraintLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/announcement"
                >

                    <ImageView
                            android:src="@drawable/mouse"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:id="@+id/imageView13"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                            app:layout_constraintVertical_bias="1.0" android:maxWidth="120dp"
                            android:minHeight="120dp" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="32dp"/>
                    <TextView
                            android:text="@string/announcement_title"
                            android:layout_width="0dp"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/background"
                            android:id="@+id/announcement_title"
                            app:layout_constraintTop_toTopOf="@+id/imageView13"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                            android:textAlignment="center" app:layout_constraintStart_toEndOf="@+id/imageView13"
                            android:layout_marginStart="8dp"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/background"
                            android:textAlignment="center"
                            android:id="@+id/announcement_description"
                            android:text="End To: 5d 9h" android:layout_marginTop="24dp"
                            app:layout_constraintTop_toBottomOf="@+id/announcement_title"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toEndOf="@+id/imageView13" android:layout_marginStart="8dp"/>
                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/recyclerViewRank"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            >

            </android.support.v7.widget.RecyclerView>

        </android.support.constraint.ConstraintLayout>


    </RelativeLayout>
</FrameLayout>