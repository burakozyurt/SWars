<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".StoreFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_alignParentStart="true"
                android:layout_marginStart="0dp" android:layout_alignParentTop="true" android:layout_marginTop="0dp">

            <TextView
                    android:textSize="@dimen/fragment_title_Text_Size"
                    android:textColor="@color/textcolor"
                    android:text="@string/store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView11"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout3"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/linearLayout3"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayoutStore" android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/textView11">
                <android.support.v7.widget.RecyclerView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/store_recyclerview_diamond" android:overScrollMode="never"
                        android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutStore"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            >
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:background="@drawable/home_jokers_background_design_middle"
                            android:paddingLeft="8dp" android:paddingRight="5dp"
                            android:gravity="center" android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/linearLayout6"
                    >
                        <TextView
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/textcolorblack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/store_fiftyfifty_textView"
                                app:layout_constraintEnd_toStartOf="@+id/diamond_equal3"
                                app:layout_constraintTop_toTopOf="@+id/diamond_equal3"
                                app:layout_constraintBottom_toBottomOf="@+id/diamond_equal3"
                        />
                        <TextView
                                android:text=":"
                                android:textColor="@color/textcolorblack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/diamond_equal3"
                                app:layout_constraintTop_toTopOf="@+id/imageView8"
                                app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                                app:layout_constraintEnd_toStartOf="@+id/imageView8"/>
                        <ImageView
                                android:src="@drawable/joker1"
                                android:layout_width="30dp"
                                android:layout_height="25dp" android:id="@+id/imageView8"
                                app:layout_constraintEnd_toStartOf="@+id/home_profile_double_dip_textView"
                                app:layout_constraintTop_toTopOf="@+id/home_profile_double_dip_textView"
                                app:layout_constraintBottom_toBottomOf="@+id/home_profile_double_dip_textView"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:background="@drawable/home_jokers_background_design_middle"
                            android:layout_height="32dp" android:paddingLeft="8dp" android:paddingRight="5dp"
                            android:gravity="center" android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/linearLayout5"
                            android:id="@+id/linearLayout6">
                        <TextView
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/textcolorblack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/store_double_dip_textView"
                                app:layout_constraintTop_toTopOf="@+id/diamond_equal"
                                app:layout_constraintBottom_toBottomOf="@+id/diamond_equal"
                                app:layout_constraintVertical_bias="1.0"
                                app:layout_constraintEnd_toStartOf="@+id/diamond_equal2"/>
                        <TextView
                                android:text=":"
                                android:textColor="@color/textcolorblack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/diamond_equal2"
                                app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                                app:layout_constraintEnd_toStartOf="@+id/imageView7"
                                app:layout_constraintTop_toTopOf="@+id/imageView7"/>
                        <ImageView
                                android:src="@drawable/joker2"
                                android:layout_width="30dp"
                                android:layout_height="25dp" android:id="@+id/imageView7"
                                app:layout_constraintEnd_toStartOf="@+id/home_profile_diamond_textView"
                                app:layout_constraintBottom_toBottomOf="@+id/home_profile_diamond_textView"
                                app:layout_constraintTop_toTopOf="@+id/home_profile_diamond_textView"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:background="@drawable/home_jokers_background_design"
                            android:layout_height="32dp" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp" android:gravity="center" android:paddingLeft="8dp"
                            android:paddingRight="5dp" android:id="@+id/linearLayout5">
                        <TextView
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/textcolorblack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/store_diamond_textView"
                                app:layout_constraintEnd_toStartOf="@+id/diamond_equal"
                                app:layout_constraintTop_toTopOf="@+id/diamond_equal"
                                app:layout_constraintBottom_toBottomOf="@+id/diamond_equal"
                        />
                        <TextView
                                android:text=":"
                                android:textColor="@color/textcolorblack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/diamond_equal"
                                app:layout_constraintEnd_toStartOf="@+id/imageView6"
                                app:layout_constraintTop_toTopOf="@+id/imageView6"
                                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                        />
                        <ImageView
                                android:src="@drawable/diamond"
                                android:layout_width="30dp"
                                android:layout_height="30dp" android:id="@+id/imageView6"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                    </LinearLayout>
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutStore"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/linearLayout4" android:gravity="center" android:layout_marginTop="8dp">
                <android.support.v7.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:id="@+id/store_recyclerview_joker_cards"
                        android:overScrollMode="never"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>
</FrameLayout>