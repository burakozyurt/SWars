<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="@dimen/slide_layout_image_witdh"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/slide1"
            android:layout_alignParentTop="true" android:id="@+id/splashSlideImage"
            android:layout_marginTop="160dp"
            android:adjustViewBounds="true"
            android:layout_marginStart="0dp"
            android:layout_alignStart="@+id/splashSlideImage" android:layout_centerHorizontal="true"
    />
    <TextView
            android:text="Splash Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/splashTitleTextView"
            android:layout_marginTop="32dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/textcolorblack"
            android:layout_below="@+id/splashSlideImage" android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_alignStart="@+id/splashTitleTextView"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:text="Her hafta sizler için ödüllerimiz var. Puan tablosunda dereceye gir haftalık ödülü kazan!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/splahsdescTextView"
            android:padding="25dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" android:layout_below="@+id/splashTitleTextView"
            android:textAlignment="center" android:textAllCaps="false"
            android:layout_alignStart="@+id/splahsdescTextView"/>
</RelativeLayout>